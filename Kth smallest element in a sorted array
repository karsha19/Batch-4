class Solution {
    public int kthSmallest(int[][] matrix, int k) {
           int row=matrix.length;
           int col=matrix[0].length;
           int count=0;
           int arr[]=new int [row*col];
           for(int i=0;i<row;i++){
            for(int j=0;j<col;j++){
                arr[count]=matrix[i][j];
                count++;
            }
           }
           Arrays.sort(arr);
           return arr[k-1];
    }
}
